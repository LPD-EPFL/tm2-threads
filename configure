if [ $# -lt 1 ]; then
  echo "Usage: $0 <path/to/rcce>"
  exit
fi

RCCEPATH=$1
cd ${RCCEPATH} > /dev/null
RCCEPATH=$PWD
cd - > /dev/null

if [ $# -gt 1 ]; then
  SYMBOLSPATH=$2
else
  SYMBOLSPATH="${RCCEPATH}/common/symbols"
fi

if [ ! -f "${SYMBOLSPATH}" ]; then
  echo "No RCCE configuration file found. Build RCCE before iRCCE!"
  exit
fi

echo "RCCEPATH=${RCCEPATH}" > Makefile
echo "SYMBOLSPATH=${SYMBOLSPATH}" >> Makefile
cat Makefile.in >> Makefile

echo "RCCEPATH=${RCCEPATH}" > apps/Makefile
echo "SYMBOLSPATH=${SYMBOLSPATH}" >> apps/Makefile
cat apps/Makefile.in >> apps/Makefile

echo "RCCEPATH=${RCCEPATH}" > bmarks/Makefile
echo "SYMBOLSPATH=${SYMBOLSPATH}" >> bmarks/Makefile
cat bmarks/Makefile.in >> bmarks/Makefile

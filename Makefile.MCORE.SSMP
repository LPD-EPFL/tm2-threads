PLATFORM_NUMA=1

PLATFORM_CFLAGS = -O3
PLATFORM_LDFLAGS = 
PLATFORM_LIBS = -lssmp -lrt

PLATFORM_DEFINES = -DPLATFORM_MCORE \
                   -UPGAS \
                   -DREAD_BUF_OFF \
                   -ULIBTASK \
                   -DBACKOFF_RETRY \
                   -UFINISH_ALL_PARALLEL \
                   -UDEBUG_UTILIZATION \
		   -UDO_TIMINGS \
